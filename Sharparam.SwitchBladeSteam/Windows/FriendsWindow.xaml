<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Sharparam.SwitchBladeSteam.Windows.FriendsWindow"
        Title="FriendsWindow" Height="480" Width="800" Background="Black" Foreground="White" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="452" VerticalAlignment="Top" Width="800" Margin="0,28,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
            <System:String>Hello, World!</System:String>
            <System:String>Goodbye, World!</System:String>
        </ListBox>
        <Label Content="Click on a friend to start chatting with them" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Height="26" Width="800" Foreground="White"/>
    </Grid>
</Window>
